<h1>Listing authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Born</th>
    <th>Died</th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.bio %></td>
      <td><%= author.born %></td>
      <td><%= author.died %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Destroy', author_path(author),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
